<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textPlayer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/Player"
        android:layout_marginStart="2.5dp"
        android:layout_toRightOf="@id/Player"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:text="Player:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/Moves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/grid_layout"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="18dp"
        android:text="Moves:"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textMoves"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/Moves"
        android:layout_marginStart="2.5dp"
        android:layout_toRightOf="@id/Moves"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


    <GridLayout
        android:id="@+id/grid_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        android:layout_marginHorizontal="20dp"
        android:background="@drawable/shape2"
        android:columnCount="4"
        tools:ignore="UselessParent">

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="00"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="01"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="02"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="03"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="10"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="11"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="12"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="13"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="20"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="21"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="22"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="23"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="30"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="31"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="32"
            android:textSize="28sp"
            app:backgroundTint="@null" />

        <Button
            android:id="@+id/btn16"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="4dp"
            android:background="@drawable/shape"
            android:onClick="click"
            android:tag="33"
            android:textSize="28sp"
            app:backgroundTint="@null" />


    </GridLayout>

    <ImageButton
        android:id="@+id/pasue_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/stop" />


    <ImageButton
        android:id="@+id/refresh"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_toLeftOf="@id/pasue_image"
        android:background="@drawable/refresh" />

    <ImageButton
        android:id="@+id/about"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:layout_toRightOf="@id/pasue_image"
        android:background="@drawable/info" />

    <ImageView
        android:id="@+id/timer"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_above="@id/grid_layout"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/timer" />

    <Chronometer
        android:id="@+id/chronometr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/timer"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="12dp"
        android:layout_toStartOf="@id/timer"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <RelativeLayout
        android:id="@+id/pauseLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#46A0A3B3"
        android:visibility="invisible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="PAUSED"
            android:textColor="@color/white"
            android:textSize="56sp"
            android:textStyle="bold" />

        <ImageButton
            android:id="@+id/play_image"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginStart="18dp"
            android:layout_marginTop="18dp"
            android:layout_marginEnd="18dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/ic_baseline_play_circle_filled_24" />

    </RelativeLayout>
</RelativeLayout>